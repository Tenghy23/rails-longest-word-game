<div class="container">
  <h1>New Game</h1>

  <ul>
    <% @arr.each do |i| %>
    <li><%= i %></li>
    <% end %>
  </ul>

  <label>What is the longest word you can find?</label>

  <form action="score" method="POST">
    <%= hidden_field_tag 'letters', @arr %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input class="textbox" type="text" placeholder="Type yr ans here" name="answer">
    <input class="submitbox" type="submit">
  </form>
</div>